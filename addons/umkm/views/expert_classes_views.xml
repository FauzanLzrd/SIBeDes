<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Expert Classes List View -->
        <record id="view_expert_classes_list" model="ir.ui.view">
            <field name="name">umkm.expert_classes.list</field>
            <field name="model">umkm.expert_classes</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" placeholder="Masukkan nama kelas"/>
                    <field name="lecturer" placeholder="Masukkan nama pengajar"/>
                    <field name="start_date" placeholder="Pilih tanggal mulai"/>
                    <field name="end_date" placeholder="Pilih tanggal selesai"/>
                </list>
            </field>
        </record>

        <!-- Expert Classes Form View -->
        <record id="view_expert_classes_form" model="ir.ui.view">
            <field name="name">umkm.expert_classes.form</field>
            <field name="model">umkm.expert_classes</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Masukkan nama kelas"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="lecturer" placeholder="Masukkan nama pengajar"/>
                                <field name="start_date" placeholder="Pilih tanggal mulai"/>
                                <field name="end_date" placeholder="Pilih tanggal selesai"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="materials" string="Materials">
                                <field name="materials" placeholder="Masukkan materi kelas"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for Expert Classes -->
        <record id="action_expert_classes" model="ir.actions.act_window">
            <field name="name">Expert Classes</field>
            <field name="res_model">umkm.expert_classes</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Menu for Expert Classes -->
        <menuitem name="Kelas Experts" 
            id="menu_kelas_experts"  
            action="action_expert_classes"/>
    </data>
</odoo>