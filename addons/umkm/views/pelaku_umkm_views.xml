<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Pelaku UMKM List View -->
        <record id="view_pelaku_umkm_list" model="ir.ui.view">
            <field name="name">umkm.pelaku.list</field>
            <field name="model">umkm.pelaku</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="nik"/>
                    <field name="phone"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <!-- Pelaku UMKM Form View -->
        <record id="view_pelaku_umkm_form" model="ir.ui.view">
            <field name="name">umkm.pelaku.form</field>
            <field name="model">umkm.pelaku</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_open_whatsapp" string="WhatsApp" type="object" class="btn-success" icon="fa-whatsapp"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="desa"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="image_1920" widget="image" options="{'size': [130,130], 'img_class': 'rounded border'}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="documents" string="Documents">
                                <group>
                                    <field name="nik"/>
                                    <field name="address"/>
                                    <field name="ktp_file" filename="nik"/>
                                </group>
                            </page>
                            <page name="attendances" string="Kehadiran Kelas Expert">
                                <field name="expert_attendances" ref=""/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Expert Attendances List View -->
        <record id="view_expert_attendances_list" model="ir.ui.view">
            <field name="name">umkm.expert_attendances.list</field>
            <field name="model">umkm.expert_attendances</field>
            <field name="arch" type="xml">
                <list>
                    <field name="expert_class_id"/>
                    <field name="attendance"/>
                    <field name="assignment"/>
                </list>
            </field>
        </record>

        <!-- Pelaku UMKM Action -->
        <record id="action_pelaku_umkm" model="ir.actions.act_window">
            <field name="name">Pelaku UMKM</field>
            <field name="res_model">umkm.pelaku</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>