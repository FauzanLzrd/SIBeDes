<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Pelaku UMKM List View -->
        <record id="view_pelaku_umkm_list" model="ir.ui.view">
            <field name="name">umkm.pelaku.list</field>
            <field name="model">umkm.pelaku</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" placeholder="Masukkan nama"/>
                    <field name="nik" placeholder="Masukkan NIK"/>
                    <field name="phone" placeholder="Masukkan nomor telepon"/>
                    <field name="email" placeholder="Masukkan email"/>
                </list>
            </field>
        </record>

        <!-- Pelaku UMKM Form View -->
        <record id="view_pelaku_umkm_form" model="ir.ui.view">
            <field name="name">umkm.pelaku.form</field>
            <field name="model">umkm.pelaku</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_open_whatsapp" string="WhatsApp" type="object" class="btn-success" icon="fa-whatsapp"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Masukkan nama"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="desa" placeholder="Masukkan nama desa"/>
                                <field name="phone" placeholder="Masukkan nomor telepon"/>
                                <field name="email" placeholder="Masukkan email"/>
                            </group>
                            <group>
                                <field name="image_1920" widget="image" options="{'size': [130,130], 'img_class': 'rounded border'}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="documents" string="Documents">
                                <group>
                                    <field name="nik" placeholder="Masukkan NIK"/>
                                    <field name="address" placeholder="Masukkan alamat"/>
                                    <field name="ktp_file" filename="nik" placeholder="Unggah file KTP"/>
                                </group>
                            </page>
                            <page name="attendances" string="Kehadiran Kelas Expert">
                                <field name="expert_attendances" ref=""/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Pelaku UMKM Kanban View -->
        <record id="view_pelaku_umkm_kanban" model="ir.ui.view">
            <field name="name">umkm.pelaku.kanban</field>
            <field name="model">umkm.pelaku</field>
            <field name="arch" type="xml">
                <kanban sample="1" create="false">
                    <field name="image_1920"/>
                    <field name="name"/>
                    <field name="nik"/>
                    <field name="desa"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="address"/>
                    <templates>
                        <t t-name="card" class="flex-row">
                            <aside class="o_kanban_aside_full">
                                <div class="position-relative w-100 h-auto m-0">
                                    <field name="image_1920" alt="Pelaku image" class="h-100" widget="image" options="{'img_class': 'object-fit-contain'}"/>
                                </div>
                            </aside>
                            <main class="ps-2">
                                <div class="mb-1">
                                    <field name="name" class="mb-0 fw-bold fs-5"/>
                                </div>
                                <div t-if="record.nik.raw_value">
                                    <i class="fa fa-fw me-1 fa-id-card text-primary" title="NIK"/>
                                    <field name="nik"/>
                                </div>
                                <div t-if="record.desa.raw_value">
                                    <i class="fa fa-fw me-1 fa-map-marker text-primary" title="Village"/>
                                    <field name="desa"/>
                                </div>
                                <div t-if="record.phone.raw_value">
                                    <i class="fa fa-fw me-1 fa-phone text-primary" title="Phone"/>
                                    <field name="phone"/>
                                </div>
                                <div t-if="record.email.raw_value">
                                    <i class="fa fa-fw me-1 fa-envelope text-primary" title="Email"/>
                                    <field name="email"/>
                                </div>
                                <div t-if="record.address.raw_value" class="text-truncate">
                                    <i class="fa fa-fw me-1 fa-home text-primary" title="Address"/>
                                    <field name="address"/>
                                </div>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Expert Attendances List View -->
        <record id="view_expert_attendances_list" model="ir.ui.view">
            <field name="name">umkm.expert_attendances.list</field>
            <field name="model">umkm.expert_attendances</field>
            <field name="arch" type="xml">
                <list>
                    <field name="expert_class_id" placeholder="Pilih kelas expert"/>
                    <field name="attendance" placeholder="Masukkan status kehadiran"/>
                    <field name="assignment" placeholder="Masukkan detail tugas"/>
                </list>
            </field>
        </record>

        <!-- Pelaku UMKM Action -->
        <record id="action_pelaku_umkm" model="ir.actions.act_window">
            <field name="name">Pelaku UMKM</field>
            <field name="res_model">umkm.pelaku</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_id" ref="view_pelaku_umkm_kanban"/>
        </record>
    </data>
</odoo>