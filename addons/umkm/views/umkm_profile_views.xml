<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_umkm_profile_list" model="ir.ui.view">
            <field name="name">umkm.profile.list</field>
            <field name="model">umkm.profile</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name" placeholder="Masukkan nama UMKM"/>
                    <field name="desa" placeholder="Masukkan nama desa"/>
                    <field name="business_type" placeholder="Masukkan jenis usaha"/>
                    <field name="owner_id" placeholder="Pilih pemilik"/>
                    <field name="phone" placeholder="Masukkan nomor telepon"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_umkm_profile_form" model="ir.ui.view">
            <field name="name">umkm.profile.form</field>
            <field name="model">umkm.profile</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_open_whatsapp" string="WhatsApp" type="object" class="btn-success" icon="fa-whatsapp"/>
                        <button invisible="latitude == 0.0 and longitude == 0.0" name="action_open_google_maps" string="Google Maps" type="object" class="btn-primary" icon="fa-map-marker"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Masukkan nama UMKM"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="business_type" placeholder="Masukkan jenis usaha"/>
                                <field name="owner_id" placeholder="Pilih pemilik"/>
                                <field name="desa" placeholder="Masukkan nama desa"/>
                                <field name="address" placeholder="Masukkan alamat"/>
                                <field name="phone" placeholder="Masukkan nomor telepon"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="image_1920" widget="image" options="{'size': [130,130], 'img_class': 'rounded border'}"/>
                                <field name="officer"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="details" string="Details">
                                <group>
                                    <field name="member_ids" widget="many2many_tags"/>
                                    <field name="description"/>
                                    <field name="nib_no"/>
                                    <field name="nib_file" filename="nib_no"/>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                </group>
                            </page>
                            <page name="products" string="Products">
                                <field name="product_ids" ref="umkm.products.forumkmprofile.list"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_umkm_profile_kanban" model="ir.ui.view">
            <field name="name">umkm.profile.kanban</field>
            <field name="model">umkm.profile</field>
            <field name="arch" type="xml">
                <kanban sample="1" create="false">
                    <field name="image_1920"/>
                    <field name="name"/>
                    <field name="business_type"/>
                    <field name="owner_id"/>
                    <field name="desa"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="officer"/>
                    <templates>
                        <t t-name="card" class="flex-row">
                            <aside class="o_kanban_aside_full">
                                <div class="position-relative w-100 h-auto m-0">
                                    <field name="image_1920" alt="Profile image" class="h-100" widget="image" options="{'img_class': 'object-fit-contain'}"/>
                                </div>
                            </aside>
                            <main class="ps-2">
                                <div class="mb-1">
                                    <field name="name" class="mb-0 fw-bold fs-5"/>
                                </div>
                                <div t-if="record.business_type.raw_value">
                                    <i class="fa fa-fw me-1 fa-building text-primary" title="Business Type"/>
                                    <field name="business_type"/>
                                </div>
                                <div t-if="record.owner_id.raw_value">
                                    <i class="fa fa-fw me-1 fa-user text-primary" title="Owner"/>
                                    <field name="owner_id"/>
                                </div>
                                <div t-if="record.desa.raw_value">
                                    <i class="fa fa-fw me-1 fa-map-marker text-primary" title="Village"/>
                                    <field name="desa"/>
                                </div>
                                <div t-if="record.phone.raw_value">
                                    <i class="fa fa-fw me-1 fa-phone text-primary" title="Phone"/>
                                    <field name="phone"/>
                                </div>
                                <div t-if="record.email.raw_value">
                                    <i class="fa fa-fw me-1 fa-envelope text-primary" title="Email"/>
                                    <field name="email"/>
                                </div>
                                <div t-if="record.officer.raw_value">
                                    <i class="fa fa-fw me-1 fa-user-tie text-primary" title="Officer"/>
                                    <field name="officer"/>
                                </div>
                            </main>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_umkm_profile" model="ir.actions.act_window">
            <field name="name">Profil UMKM</field>
            <field name="res_model">umkm.profile</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="view_id" ref="view_umkm_profile_kanban"/>
        </record>

        <!-- Menu -->
        <menuitem name="UMKM" 
            id="menu_umkm"  
            action="action_umkm_profile"/>

        <menuitem id="menu_umkm_profile"
            name="Profil"
            action="action_umkm_profile"
            parent="menu_umkm"
            sequence="10"/>

        <!-- Pelaku UMKM Menu -->
        <menuitem id="menu_pelaku_umkm" 
            name="Pelaku" 
            parent="menu_umkm" 
            action="action_pelaku_umkm"
            sequence="20"/>

        <!-- Products Menu -->
        <menuitem id="menu_umkm_products" 
            name="Produk" 
            parent="menu_umkm" 
            action="action_umkm_products"
            sequence="30"/>
    </data>
</odoo>