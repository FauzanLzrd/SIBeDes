<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Pelaku UMKM List View -->
        <record id="view_pelaku_umkm_list" model="ir.ui.view">
            <field name="name">umkm.pelaku.list</field>
            <field name="model">umkm.pelaku</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="nik"/>
                    <field name="phone"/>
                    <field name="email"/>
                </list>
            </field>
        </record>

        <!-- Pelaku UMKM Form View -->
        <record id="view_pelaku_umkm_form" model="ir.ui.view">
            <field name="name">umkm.pelaku.form</field>
            <field name="model">umkm.pelaku</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image_1920" widget="image" options="{'preview_image': 'avatar_128', 'size': [130,130], 'img_class': 'rounded border'}"/>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="nik"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="documents" string="Documents">
                                <group>
                                    <field name="ktp_file" filename="nik"/>
                                </group>
                            </page>
                            <page name="address" string="Address">
                                <field name="address"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- Pelaku UMKM Action -->
        <record id="action_pelaku_umkm" model="ir.actions.act_window">
            <field name="name">Pelaku UMKM</field>
            <field name="res_model">umkm.pelaku</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- Pelaku UMKM Menu -->
        <menuitem id="menu_pelaku_umkm" name="Pelaku UMKM" action="action_pelaku_umkm"/>
    </data>
</odoo>